FROM nginx:alpine

# Copy the test HTML file
COPY test-simple.html /usr/share/nginx/html/index.html

# Create a simple health check endpoint
RUN echo '{"status":"healthy","service":"test-app","timestamp":"'$(date -Iseconds)'"}' > /usr/share/nginx/html/health.json

# Set up nginx to serve JSON files correctly
RUN echo 'server { \
    listen 80; \
    location / { \
        root /usr/share/nginx/html; \
        index index.html; \
    } \
    location /health { \
        root /usr/share/nginx/html; \
        add_header Content-Type application/json; \
        try_files /health.json =404; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
